views/posts/show <br/>

<%= @post.title %><br/>
<%= @post.content %><br/>
<% @post.comments.each do |comment| %>
  <%= comment.user.username %> says: <%= comment.content %><br/>
<% end %>
<% @post.uniq_users_list.each do |user| %>
  <%= link_to user.username, user %>
<% end %>

<ul>
<% @post.categories.each do |category| %>
  <li><%= category.name %></li>
<% end %>
</ul>
